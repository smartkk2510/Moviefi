<h2>Search Directors</h2>
<form action="/directors" method="get">
    <div class="form-row">
        <div class="form-item">
            <label for="name">Name</label>
            <input type="text" name="name" id="name" value="<%= searchOption.name %>">
        </div>
    </div>
    <div class="form-row form-row-end">
        <button class="btn btn-primary" type="submit" >Search</button>
    </div>
</form>
<% director.forEach(director => { %>
    <div >
        <div><%= director.name %></div>
        <div class="btn-row ">
        <a class="btn btn-primary" href="/directors/<%= director.id %>">View</a>
        <a class="btn btn-primary" href="/directors/<%= director.id %>/edit">Edit</a>
        <%- include('../partials/deleteForm',{ url : `/directors/${director.id}`}) %>
        </div>
    </div>
   
<% }); %>

